#
# For instalation. Change this to your settings.
#
INC_DIR = ../../../include
LIB_DIR = ../..
#
#  compiler
#
CC=cc
LDFLAG=-L/usr/lib/x86_64-linux-gnu -L$(LIB_DIR)/linux-x86_64 -L$(LIB_DIR)
LIBS= -lARgsub -lAR -lARICP -lAR -lglut -lGLU -lGL -lX11 -lm -lpthread -ljpeg -lgstreamer-0.10 -lgobject-2.0 -lgmodule-2.0 -pthread -lgthread-2.0 -pthread -lglib-2.0 -lxml2
CFLAG= -O3 -fPIC -march=core2 -I/usr/include/x86_64-linux-gnu -pthread -I/usr/include/gstreamer-0.10 -I/usr/include/glib-2.0 -I/usr/lib64/glib-2.0/include -I/usr/include/libxml2 -I$(INC_DIR)
#
# For making the library
#
AR=ar
ARFLAGS=rs
RANLIB= true
#
#   products
#
LIB= ${LIB_DIR}/libARgsub.a
LIB3= ${LIB_DIR}/libARgsub_lite.a

INCLUDE= ${INC_DIR}/AR/gsub.h     \
         ${INC_DIR}/AR/config.h   \
         ${INC_DIR}/AR/arConfig.h \
         ${INC_DIR}/AR/ar.h       \
         ${INC_DIR}/AR/matrix.h   \
         ${INC_DIR}/AR/param.h    \
	 argPrivate.h
INCLUDE3= ${INC_DIR}/AR/gsub_lite.h \
         ${INC_DIR}/AR/gsub_mtx.h \
         ${INC_DIR}/AR/config.h \
         ${INC_DIR}/AR/ar.h \
         ${INC_DIR}/AR/param.h

#
#   compilation control
#
LIBOBJS= ${LIB}(argBase.o)      \
	 ${LIB}(argWindow.o)    \
	 ${LIB}(argFunction.o)  \
	 ${LIB}(argDrawMode.o)  \
	 ${LIB}(argDraw.o)      \
	 ${LIB}(argDrawImage.o)
LIB3OBJS= ${LIB3}(gsub_lite.o) \
	 ${LIB3}(gsub_mtx.o)

all:	${LIBOBJS} ${LIB3OBJS} ./gsubTest

${LIBOBJS}:		${INCLUDE}
${LIB3OBJS}:		${INCLUDE3}

./gsubTest:	gsubTest.o ${LIB}
	 ${CC} -o ./gsubTest gsubTest.o $(LDFLAG) $(LIBS)
.c.a:
	${CC} -c ${CFLAG} $<
	${AR} ${ARFLAGS} $@ $*.o
	${RANLIB}
	rm -f $*.o

gsubTest.o:	gsubTest.c ${INCLUDE}
	${CC} -c $(CFLAG) gsubTest.c

clean:
	rm -f *.o
	rm -f ${LIB} ${LIB3}
	rm -f ./gsubTest

allclean:
	rm -f *.o
	rm -f ${LIB} ${LIB3}
	rm -f ./gsubTest
	rm -f Makefile

distclean:
	rm -f *.o
	rm -f Makefile
